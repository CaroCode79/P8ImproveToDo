{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="mt-4">Bienvenue sur Todo List, </h1>
    <h3 class="mb-4">l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h3>
{% endblock %}

{% block body %}
     <div class="row">
        <div class="col-12 d-flex flex-wrap">
            <a href="{{ path('task_create') }}" class="btn btn-success mr-2 mt-2">Créer une nouvelle tâche</a>
            <a href="{{ path('task_list_all') }}" class="btn btn-info mr-2 mt-2">Consulter la liste de toutes les tâches</a>
            <a href="{{ path('task_list', {'isDone': 'false'}) }}" class="btn btn-info mr-2 mt-2">Consulter la liste des tâches à faire</a>
            <a href="{{ path('task_list', {'isDone': 'true'}) }}" class="btn btn-info mt-2">Consulter la liste des tâches terminées</a>
        </div>
    </div>
{% endblock %}
