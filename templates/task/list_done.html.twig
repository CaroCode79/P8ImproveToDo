{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <div class="row">
        <a href="{{ path('task_create') }}" class="btn btn-info ml-3">Créer une tâche</a>
    </div>
    <div class="row">

        <h1 class="col-12 justify-content-start my-4">Liste des tâches terminées</h1>

        {% for task in tasks %}
        <div id="tasks-list-{{ task.id }}" class="col-sm-4 col-lg-4 col-md-4">
            <div class="card my-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4><a href="{{ path('task_edit', {'id': task.id }) }}">{{ task.title }}</a></h4>
                        <h4 id="icon-toggle-{{ task.id }}">
                            {% if task.isDone %}
                                <svg width="1.6em" height="1.6em" viewBox="0 0 16 16" class="bi bi-check2-square text-success" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L8 9.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                                    <path fill-rule="evenodd" d="M1.5 13A1.5 1.5 0 0 0 3 14.5h10a1.5 1.5 0 0 0 1.5-1.5V8a.5.5 0 0 0-1 0v5a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V3a.5.5 0 0 1 .5-.5h8a.5.5 0 0 0 0-1H3A1.5 1.5 0 0 0 1.5 3v10z"/>
                                </svg>
                            {% else %}
                                <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-square text-secondary" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                </svg>
                            {% endif %}
                        </h4>
                    </div>
                    <p>{{ task.content }}</p>
                    <div class="d-flex justify-content-around flex-wrap row">
                        <a type="button" href="{{ path('task_toggle_ajax', {'id': task.id }) }}" 
                           class="btn btn-info btn-sm mt-1 toggle-link"
                           data-token="{{ csrf_token('toggle-token-' ~ task.id) }}"
                           data-taskid="{{ task.id }}">
                            {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                        </a>
                        <form action="{{ path('task_delete', {'id': task.id }) }}" >
                            <button class="btn btn-danger btn-sm mt-1">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning ">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
